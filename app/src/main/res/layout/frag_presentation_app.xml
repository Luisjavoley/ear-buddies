<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">


    <!--  add three dot to see where the user is in the presentation -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/description_app_picture"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dotRight"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:src="@drawable/dot"/>

        <ImageView
            android:id="@+id/dotCenter"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:src="@drawable/dot"/>

        <ImageView
            android:id="@+id/dotLeft"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:src="@drawable/dot"/>
    </LinearLayout>

    <TextView
        android:id="@+id/description_app_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/description_app_picture"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/description_app_text"
        android:layout_marginTop="33dp"
        android:layout_weight="0.20"
        android:adjustViewBounds="true"
        android:gravity="center"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:id="@+id/details_frag"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:background="@color/cardview_light_background"
              android:weightSum="1">

    <Button
        android:text="@string/backbutton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/details_back_button"
        android:layout_weight="0.09"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:text="@string/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_name"
        android:layout_weight="0.09"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:fontFamily="cursive"
        android:textSize="18sp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/facebook_logo"
        android:id="@+id/details_fragment_facebook"
        android:background="@color/cardview_light_background"
        android:layout_gravity="end"
        android:layout_above="@+id/details_back_button"
        android:layout_alignLeft="@+id/details_back_button"
        android:layout_alignStart="@+id/details_back_button"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/details_fragment_picture"
        android:src ="@drawable/com_facebook_profile_picture_blank_square"
        android:layout_marginTop="28dp"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_below="@+id/details_name"
        android:layout_centerHorizontal="true"
        app:civ_border_width="0dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:text="@string/song_artist"
        android:layout_width="match_parent"
        android:id="@+id/details_song_artist"
        android:layout_weight="0.16"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/details_fragment_picture"
        android:layout_alignStart="@+id/details_fragment_picture"
        android:gravity="fill_vertical"
        android:layout_height="30dp"/>

    <TextView
        android:text="@string/is_listening_to_the_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_below="@+id/details_fragment_picture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:text="@string/details_facebook_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/details_description"
        android:layout_above="@+id/details_fragment_facebook"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/details_song_name"
        android:layout_alignLeft="@+id/details_song_picture"
        android:layout_alignStart="@+id/details_song_picture"
        android:gravity="center_vertical"/>

    <TextView
        android:text="@string/song_name"
        android:layout_width="wrap_content"
        android:layout_below="@+id/details_song_artist"
        android:id="@+id/details_song_name"
        android:layout_toRightOf="@+id/details_song_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:layout_height="30dp"/>

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_image_audiotrack"
        android:id="@+id/details_song_picture"
        android:layout_alignTop="@+id/details_song_artist"
        android:layout_toLeftOf="@+id/details_song_artist"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_width="60dp"
        android:layout_alignBottom="@+id/details_song_name"/>
</RelativeLayout>
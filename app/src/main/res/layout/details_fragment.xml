<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:id="@+id/details_frag"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:background="@color/colorPrimaryDark"
              android:weightSum="1">

    <TextView
        android:text="@string/textviewdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/details_fragment_messenger"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/details_url"
        android:layout_alignRight="@+id/details_fragment_picture"
        android:layout_alignEnd="@+id/details_fragment_picture"
        android:layout_above="@+id/back_button"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/com_facebook_button_icon_blue"
        android:id="@+id/details_fragment_messenger"
        android:background="@color/colorPrimary"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/back_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="@string/more_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_above="@+id/details_url"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_square"
        android:id="@+id/details_fragment_picture"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/details_name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="@string/details_textview2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/details_description"
        android:layout_weight="0.16"
        android:layout_above="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"/>

    <TextView
        android:text="@string/is_listening_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_above="@+id/details_music"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="@string/details_textview"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/details_music"
        android:layout_weight="0.14"
        android:layout_above="@+id/details_description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="@string/backbutton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/back_button"
        android:layout_weight="0.09"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:text="@string/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/details_name"
        android:layout_weight="0.09"
        android:layout_marginTop="41dp"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"/>
</RelativeLayout>